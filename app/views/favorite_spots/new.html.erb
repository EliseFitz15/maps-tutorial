<div class="row">
  <div class="small-6 small-offset-3 columns">
    <h1 class="header">Add Your Favorite Spot</h1>

    <%= form_for [@favorite_spot] do |f| %>

    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address, id: "address" %>
    </div>

    <div class="field">
      <%= f.label :latitude %>
      <%= f.number_field(:latitude) %>
    </div>

    <div class="field">
      <%= f.label :longitude %>
      <%= f.number_field(:longitude) %>
    </div>

    <div class="field">
      <%= f.label :location_name %>
      <%= f.text_field :location_name %>
    </div>

      <%= f.submit "Add Your Spot", class: "button" %>

    <% end %>
  </div>
</div>
